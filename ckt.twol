Rules

"Vowel harmony"
! а й в а н >:0 у:о
Vx:Vy <=> [ Dominant | %{⁺ⱽᴴ%}: ] :* _ ;
                                    _ :* [ Dominant | %{⁺ⱽᴴ%}: ] ;
       except
           .#. _ %>: :Vow ;         ! contexts for deletion
          :Cns _ :0* %>: :Vow ;     ! deletion; :0* = special symbols
               _ :* \ %>: %{☭%}: ;  ! doesn't affect loan phonology
               _ %{°%}:0 .#. ;          ! word-final abs reduction
               _ %{·%}:0 .#. ; ;        ! word-final abs deletion
   [ :ч | :ԓ ] :0* _ ;       ! orthography
       where
           Vx in ( у ю и %{Æ%} )
           Vy in ( о ё э   а   ) matched ;


"Vowel harmony after ԓ"
! а й в а ԓ >:0 у:ё
! а й в а ԓ >:0 у:о   ! Neg
Vx:Vy <=> [ Dominant | %{⁺ⱽᴴ%}: ] :* :ԓ :0* _ ;
                                    :ԓ :0* _ :* [ Dominant | %{⁺ⱽᴴ%}: ] ;
      except
          .#. _ %>: :Vow ;
         :Cns _ :0* %>: :Vow ;
              _ :* \ %>: %{☭%}: ;
              _ %{°%}:0 .#. ;
              _ %{·%}:0 .#. ; ;
      where
          Vx in ( у ю и %{Æ%} )
          Vy in ( ё ё е   я   ) matched ;

